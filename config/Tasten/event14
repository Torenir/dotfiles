#audacious
KEY_KPENTER p : audtool current-song | xargs --null notify-send -t 3000
KEY_KP0 p : audtool playback-playpause
KEY_KP0 h : audtool playback-seek 0
KEY_KP1 p : audtool set-volume -2%
KEY_KP2 p : audtool set-volume +2%
KEY_KP3 p : audtool playback-seek-relative 10
KEY_KP3 h : audtool playlist-advance
KEY_KP6 p : audtool playback-seek-relative -10
KEY_KP6 h : audtool playlist-reverse

#pulseaudio
KEY_NUMLOCK p : pactl set-source-mute @DEFAULT_SOURCE@ toggle
KEY_KPSLASH p : pactl set-source-volume @DEFAULT_SOURCE@ -2%
KEY_KPASTERISK p : pactl set-source-volume @DEFAULT_SOURCE@ +2%
KEY_KP7 p : pactl set-sink-mute @DEFAULT_SINK@ toggle
KEY_KP8 p : pactl set-sink-volume @DEFAULT_SINK@ -2%
KEY_KP9 p : pactl set-sink-volume @DEFAULT_SINK@ +2%

#discord shortcuts
KEY_LEFT p : xdotool key ctrl+alt+shift+F1
KEY_DOWN p : xdotool key ctrl+alt+shift+F2
KEY_RIGHT p : xdotool key ctrl+alt+shift+F3
